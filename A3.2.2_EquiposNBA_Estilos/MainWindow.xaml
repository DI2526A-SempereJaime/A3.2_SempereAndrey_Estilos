<Window x:Class="A3._2._2_EquiposNBA_Estilos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="StackPanelStyleDefault" TargetType="StackPanel">
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        <Style x:Key="ImageStyle" TargetType="Image">
            <Setter Property="Height" Value="100"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,3,5,3"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="8"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>
        <Style TargetType="WrapPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="StackPanelGradientLakers" TargetType="StackPanel" BasedOn="{StaticResource StackPanelStyleDefault}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="Purple" Offset="0"/>
                        <GradientStop Color="Gold" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="StackPanelGradientMiamiHeat" TargetType="StackPanel" BasedOn="{StaticResource StackPanelStyleDefault}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="Red" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <StackPanel >
        <Border>
            <StackPanel Style="{StaticResource StackPanelGradientLakers}">
                <TextBlock Text="Los Angeles Lakers" />
                <WrapPanel>
                    <Image Source="/Images/39_lakers.png" Style="{StaticResource ImageStyle}"/>
                    <Image Source="/Images/3_lakers.png"  Style="{StaticResource ImageStyle}"/>
                    <Image Source="/Images/9_lakers.png"  Style="{StaticResource ImageStyle}"/>
                    <Image Source="/Images/14_lakers.png" Style="{StaticResource ImageStyle}"/>
                    <Image Source="/Images/23_lakers.png" Style="{StaticResource ImageStyle}"/>
                </WrapPanel>
            </StackPanel>
        </Border>
        <Border>
            <StackPanel Style="{StaticResource StackPanelGradientMiamiHeat}">
                <TextBlock Text="Miami Heat" FontWeight="Bold" FontSize="16" Foreground="White"/>
                <WrapPanel>
                    <Image Source="/Images/14_heat.png" Style="{StaticResource ImageStyle}"/>
                    <Image Source="/Images/22_heat.png" Style="{StaticResource ImageStyle}"/>
                    <Image Source="/Images/7_heat.png"  Style="{StaticResource ImageStyle}"/>
                    <Image Source="/Images/99_heat.png" Style="{StaticResource ImageStyle}"/>
                    <Image Source="/Images/13_heat.png" Style="{StaticResource ImageStyle}"/>
                </WrapPanel>
            </StackPanel>
        </Border>

    </StackPanel>
</Window>