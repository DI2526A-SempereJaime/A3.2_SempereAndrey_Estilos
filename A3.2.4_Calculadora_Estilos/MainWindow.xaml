<Window x:Class="A3._2._4_Calculadora_Estilos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculadora" Height="400" Width="300" MinHeight="300" MinWidth="250">

    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="Button"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0">
            <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch">
                <TextBlock x:Name="Display" Text="" TextAlignment="Right" Margin="5"/>
            </Viewbox>
        </Border>

        <Grid Grid.Row="1" Grid.RowSpan="4">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Content="1" Grid.Row="0" Grid.Column="0" Click="Button_Click"/>
            <Button Content="2" Grid.Row="0" Grid.Column="1" Click="Button_Click"/>
            <Button Content="3" Grid.Row="0" Grid.Column="2" Click="Button_Click"/>

            <Button Content="4" Grid.Row="1" Grid.Column="0" Click="Button_Click"/>
            <Button Content="5" Grid.Row="1" Grid.Column="1" Click="Button_Click"/>
            <Button Content="6" Grid.Row="1" Grid.Column="2" Click="Button_Click"/>

            <Button Content="7" Grid.Row="2" Grid.Column="0" Click="Button_Click"/>
            <Button Content="8" Grid.Row="2" Grid.Column="1" Click="Button_Click"/>
            <Button Content="9" Grid.Row="2" Grid.Column="2" Click="Button_Click"/>

            <Button Content="0" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>

